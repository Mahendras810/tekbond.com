{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <div class="page-banner-area bg-2">
    <div class="container">
      <div class="page-banner-content">
        <h1>{{ item.text }}</h1>
        <ul>
        {% for item in breadcrumb %}
          <li>
            {% if item.url %}
              <a href="{{ item.url }}">{{ item.text }}</a>
            {% else %}
              {{ item.text }}
            {% endif %}
          </li>
        {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endif %}
